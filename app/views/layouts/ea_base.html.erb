<% inside_layout 'base' do -%>
<% content_for :header_tags do %>
<%= stylesheet_link_tag(
                        'story/layout',
                        'story/colours',

                        'application/layout',
                        'application/colours',

                        :cache => false, :plugin => 'easy_agile') %>
<% end %>

<% selected_tab = controller.tab_name %>
<div class="tabs">
  <ul>
    <% ea_tabs.each do |tab| -%>
      <li><%= link_to l(tab[:label]), tab[:path],
              :id => "tab-#{tab[:id]}",
              :class => (tab[:id] != selected_tab ? nil : 'selected'),
              :onclick => "showTab('#{tab[:id]}'); this.blur(); return false;" %></li>
    <% end -%>
  </ul>
  <div class="contextual">
    <%= link_to 'New Story',
                contextual_new_story_path,
                :accesskey => 'n',
                :id => 'contextual_new_story',
                :class => 'icon icon-add' %>
  </div>
</div>

<h2><%= yield(:h2) %></h2>
<% unless yield(:actions).blank? %>
  <ul id="actions">
    <%= yield :actions %>
  </ul>
<% end %>
<%= yield %>
<% content_for :footer do %>
  <p>
    <%= link_to 'Keyboard Shortcuts', keyboard_shortcuts_path, :accesskey => 'k' %>
  </p>
<% end %>
<%= render :partial => 'shared/footer' %>
<% unless request.user_agent.include?('iPhone') %>
  <%= javascript_includes %>
<% end %>
<% end %>
