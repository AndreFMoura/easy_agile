<% inside_layout 'base' do -%>
<% content_for :header_tags2 do %>
<%= stylesheet_link_tag('reset-fonts',
                        'story/layout',
                        'story/typography',
                        'story/colours',
                        'iteration/layout',
                        'iteration/typography',
                        'iteration/colours',
                        'iteration_planning/layout',
                        'iteration_planning/typography',
                        'iteration_planning/colours',
                        'iteration_active/layout',
                        'iteration_active/typography',
                        'iteration_active/colours',
                        'application/layout',
                        'application/typography',
                        'application/colours',
                        :cache => true, :plugin => 'easy_agile') %>
<% unless request.user_agent.include?('iPhone') %>
  <%= javascript_includes %>
<% end %>
<% end %>

<% selected_tab = params[:tab] ? params[:tab].to_s : ea_tabs.first[:name] %>
<div class="tabs">
  <ul>
    <% ea_tabs.each do |tab| -%>
      <li><%= link_to l(tab[:label]), { :tab => tab[:name] },
              :id => "tab-#{tab[:name]}",
              :class => (tab[:name] != selected_tab ? nil : 'selected'),
              :onclick => "showTab('#{tab[:name]}'); this.blur(); return false;" %></li>
    <% end -%>
  </ul>
  <div class="tabs-buttons" style="display:none;">
    <button class="tab-left" onclick="moveTabLeft(this);"></button>
    <button class="tab-right" onclick="moveTabRight(this);"></button>
  </div>
</div>

<script>
  Event.observe(window, 'load', function() { displayTabsButtons(); });
  Event.observe(window, 'resize', function() { displayTabsButtons(); });
</script>



    <div id="container">
      <div id="header">
        <div id="breadcrumbs">
          <%= yield :breadcrumbs %>
        </div>
        <%= link_to('New Story',
          contextual_new_story_path,
          :accesskey => 'n',
          :id => 'contextual_new_story') %>
      </div>

      <div id="content">
        <h1><%= yield(:h1) %></h1>
        <% unless yield(:actions).blank? %>
          <ul id="actions">
            <%= yield :actions %>
          </ul>
        <% end %>
        <%= render_flash %>
        <%= yield %>
      </div>
      <% content_for :footer do %>
        <p>
        <%= link_to 'Keyboard Shortcuts', keyboard_shortcuts_path, :accesskey => 'k' %>
        </p>
      <% end %>
      <%= render :partial => 'shared/footer' %>
    </div>
<% end %>
