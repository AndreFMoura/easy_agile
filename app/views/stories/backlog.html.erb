<% content_for :title, "#{@project} Backlog" %>
<% content_for :h2, h("#{@project} Backlog") %>

<% form_for @project do |f| %>
<ol class="stories">
  <%= render @project.stories.backlog %>
</ol>
<p class="submit">
<%= f.submit 'Save Priorities' %>
</p>
<% end %>

<div id="next_steps">
  <h2>Next Steps</h2>
  <ul>
    <li>
    <%= link_to l(:new_story), contextual_new_story_path %>
    </li>
    <li>
    <%= link_to l(:plan_iteration), new_project_iteration_path(@project) %>
    </li>
  </ul>
</div>
