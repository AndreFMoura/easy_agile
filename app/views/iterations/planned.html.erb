<% content_for :title, "Planned Iterations" %>
<% content_for :h2, "Planned Iterations" %>
<% content_for :actions do %>
  <li><%= link_to "Active", project_iterations_path %></li>
  <li><%= link_to "Finished", finished_project_iterations_path %></li>
<% end %>

<% if @iterations.empty? -%>
  <p>
    This page only shows planned iterations.
  </p>
  <p>
    There are currently no planned iterations.
  </p>
<% else -%>
  <div id="iterations" class="section_container">
    <div class="section">
      <h2>Planned</h2>
      <div class="planned">
        <% width = @iterations.size == 1 ? 600 : 300 -%>
        <% height = @iterations.size == 1 ? 450 : 225 -%>
        <ul>
          <%= render @iterations, :width => width %>
        </ul>
      </div>
    </div>
  </div>
<% end -%>
