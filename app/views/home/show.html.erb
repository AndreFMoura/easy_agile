<% content_for :title, "Simply Agile Home" %>
<% content_for :h1, "Simply Agile Home" %>

<div class="section">
<h2>To get started...</h2>

<ul>
  <li><%= link_to "Create a new project", new_project_path %></li>
  <% unless @projects.empty? -%>
  <li><%= link_to "Create a new story", new_story_path %></li>
  <li>
    <% form_tag new_iteration_path, :method => :get do -%>
      <p>
      <%= label_tag :project_id, "Plan an iteration for" %>
      <%= select_tag :project_id, options_from_collection_for_select(@projects, :id, :name) %>
      <%= submit_tag "Go" %>
      </p>
    <% end -%>
  </li>
  <% end -%>
</ul>
</div>

<% unless @active_iterations.empty? -%>
  <div class="section">
  <h2>or work on one of these active iterations</h2>

  <ol>
    <%= render @active_iterations, :width => 300 %>
  </ol>
  </div>
<% end -%>
