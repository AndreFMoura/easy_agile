<% content_for :title, "Sharing" %>
<% content_for :h1, h(@organisation.name) %>

<div class="section">
  <h2>Organisation Members</h2>

  <table>
    <% @organisation.users.each do |user| -%>
      <tr>
        <td>
          <%= user.email_address %>
          <% if user == @current_user -%>
            <span class="aside">(it's you)</span>
          <% end -%>
        </td>
        <td>
          <% unless user == @current_user -%>
            <%= button_to "Remove from organisation" %>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  </table>

  <h3>Add somebody to this organisation</h3>
  <% form_for @user, :url => organisation_members_path do |form| -%>
    <div>
      <%= form.error_messages %>
    </div>

    <p>
      <%= form.label :email_address %>
      <%= form.text_field :email_address %>
    </p>
    <p class="submit">
      <%= form.submit "Add user" %>
    </p>
  <% end -%>
</div>
