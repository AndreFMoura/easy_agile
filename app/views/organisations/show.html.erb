<% content_for :title, "Sharing" %>
<% content_for :h1, h(@organisation.name) %>

<% content_for :actions do %>
  <li><%= link_to 'Change', organisations_path %></li>
<% end %>

<div class="section">
  <h2><%= h(@organisation.name) %> Members</h2>

  <table>
    <% @organisation.users.each do |user| -%>
      <tr>
        <td>
          <%= user.email_address %>
        </td>
        <td class="aside">
          <% if user == @current_user -%>
            (you)
          <% elsif ! user.acknowledged_for?(@current_organisation) -%>
            Account is not yet acknowledged
          <% end -%>
        </td>
        <td>
          <% unless user == @current_user -%>
            <%= button_to "Remove from organisation",
              organisation_member_path(@organisation, user.id),
              :method => :delete %>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  </table>

  <h3>Add somebody to this organisation</h3>
  <% form_for @user, :url => organisation_members_path(@organisation) do |form| -%>
    <div>
      <%= form.error_messages %>
    </div>

    <p>
      <%= form.label :email_address %>
      <%= form.text_field :email_address %>
    </p>
    <p class="submit">
      <%= form.submit "Add user" %>
    </p>
  <% end -%>
</div>
