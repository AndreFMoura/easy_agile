<h3>Easy Agile Home</h3>

<% unless @user.active_iterations_worked_on.empty? -%>
  <div id="recent_work" class="section_container">
    <div class="section">
      <h4>Recent work</h4>
      <ol>
        <%= render :partial => 'my/blocks/active_work',
          :collection => @user.active_iterations_worked_on %>
      </ol>
    </div>
  </div>
<% end -%>

<% unless @user.recently_finished_iterations_worked_on.empty? -%>
  <div id="recently_finished_iterations" class="section_container">
    <div class="section">
      <h4>Recently finished iterations</h4>
      <div class="finished">
        <ol>
          <%= render @user.recently_finished_iterations_worked_on %>
        </ol>
      </div>
    </div>
  </div>
<% end -%>


<% unless @user.active_iterations.empty? -%>
  <div id="iterations" class="section_container">
    <div class="section">
      <h4>Active Iterations</h4>
      <div class="active">
        <ol>
          <%= render @user.active_iterations, :width => 300 %>
        </ol>
      </div>
    </div>
  </div>
<% end -%>
