<% content_for :title, "#{@project} | Projects" %>
<% content_for :h1, h(@project) %>
<% content_for :actions do %>
<li><%= link_to "Edit", edit_project_path(@project) %></li>
<% end %>
<% content_for :breadcrumbs do %>
  <li class="first-child project"><%= h @project %></li>
<% end %>

<%= simple_format h(@project.description) %>

<div id="backlog" class="section">
  <h2>Backlog</h2>
  <p>
  <%= link_to h("Full #{@project} backlog"), backlog_project_stories_path(@project) %>
  </p>
  <%= render @project.stories.backlog.all(:limit => 10) %>
</div>

<div id="iterations" class="section">
  <h2>Iterations</h2>
  <p>
  <%= link_to("Plan an iteration", 
              new_project_iteration_path(@project))
  %>
  </p>
  <% if @project.iterations.empty? %>
    <div class="guidance">
      <p>
      This project has no iterations.
      </p>
    </div>
  <% else %>
    <% unless @project.iterations.active.empty? %>
      <div class="section">
        <h3>Active</h3>
        <ol>
          <%= render(:partial => 'iterations/list_item', 
                     :collection => @project.iterations.active) %>
        </ol>
      </div>
    <% end %>
    <% unless @project.iterations.pending.empty? %>
      <div class="section">
        <h3>Pending</h3>
        <ol>
          <%= render(:partial => 'iterations/list_item', 
                     :collection => @project.iterations.pending) %>
        </ol>
      </div>
    <% end %>
  <% end %>
</div>
